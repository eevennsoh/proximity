
[metadata]
  name = "proximity"
  summary = "A general purpose configurable HTTP proxy."
  description = "Proximity is a configurable HTTP proxy that can transform requests and responses based on a YAML configuration file."
  owners = ["vportella"]
  tags = ["ai", "proxy", "ai-gateway"]
  repository = "https://statlas.prod.atl-paas.net/atlas-cli-plugin-proximity"
  slackChannel = "#proximity"

[build]
  main = "cmd/"
  args = "-ldflags \"-X main.Version={{.Version}}\""
  variants = ["darwin-amd64", "darwin-arm64"]

[release]
  namespace = "atlas-cli-plugin-proximity"
